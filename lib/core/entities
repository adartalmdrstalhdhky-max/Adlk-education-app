import 'package:hive/hive.dart';

// يجب أن نستخدم @HiveType لتمكين تخزين البيانات محلياً
part 'course_entity.g.dart'; // هذا الملف سيتم إنشاؤه تلقائياً لاحقاً

@HiveType(typeId: 0)
class CourseEntity extends HiveObject {
  @HiveField(0)
  final String id; // رقم تعريفي فريد
  
  @HiveField(1)
  final String title; // عنوان الكورس
  
  @HiveField(2)
  final String description; // وصف الكورس
  
  @HiveField(3)
  final String coverImageUrl; // رابط صورة الغلاف
  
  @HiveField(4)
  final bool isDownloaded; // هل تم تحميله للعمل بدون انترنت

  CourseEntity({
    required this.id,
    required this.title,
    required this.description,
    required this.coverImageUrl,
    required this.isDownloaded,
  });
}
